<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:paddingBottom="@dimen/big_padding"
    android:paddingEnd="@dimen/big_padding"
    android:paddingStart="0dp"
    android:paddingTop="@dimen/big_padding"
    >
  <ImageView
      android:id="@+id/logo"
      android:layout_width="32dp"
      android:layout_height="32dp"
      android:layout_centerVertical="true"
      android:layout_marginStart="@dimen/big_margin"
      android:contentDescription="@string/empty"
      android:src="@mipmap/token_logo"
      />
  <TextView
      android:id="@+id/symbol"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_centerVertical="true"
      android:layout_marginEnd="@dimen/normal_margin"
      android:layout_marginStart="@dimen/big_margin"
      android:layout_toEndOf="@+id/logo"
      android:layout_toStartOf="@+id/delete_action"
      android:textAllCaps="true"
      android:textAppearance="?attr/textAppearanceListItem"
      android:textSize="12sp"
      tools:text="TRST"
      />
  <ImageView
      android:id="@+id/delete_action"
      android:layout_width="@dimen/half_large_margin"
      android:layout_height="@dimen/half_large_margin"
      android:layout_marginEnd="@dimen/normal_margin"
      android:layout_toStartOf="@+id/is_enable"
      app:srcCompat="@drawable/ic_delete_forever_black_24dp"
      />
  <Switch
      android:id="@+id/is_enable"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentEnd="true"
      android:layout_centerVertical="true"
      android:layout_marginEnd="13dp"
      android:clickable="false"
      android:focusable="false"
      android:focusableInTouchMode="false"
      android:gravity="end"
      />
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/cardview_light_background"
    android:padding="16dp"
    >
  <TextView
      android:id="@+id/iab_activity_raiden_channel_info_title"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/iab_activity_raiden_channel_info_title"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      style="@style/Base.TextAppearance.AppCompat.Headline"
      />
  <TextView
      android:id="@+id/iab_activity_raiden_channel_info_message"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="8dp"
      android:text="@string/iab_activity_raiden_channel_info_message"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/iab_activity_raiden_channel_info_title"
      style="@style/Base.TextAppearance.AppCompat.Body1"
      />

  <Button
      android:id="@+id/iab_activity_raiden_ok_button"
      android:layout_width="wrap_content"
      android:layout_height="32dp"
      android:layout_marginTop="32dp"
      android:text="@string/ok"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="1"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/iab_activity_raiden_channel_info_message"
      style="@style/ButtonStyle"
      />

  <CheckBox
      android:id="@+id/iab_activity_raiden_dont_show_again"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      app:layout_constraintBottom_toBottomOf="@+id/iab_activity_raiden_ok_button"
      app:layout_constraintTop_toTopOf="@+id/iab_activity_raiden_ok_button"
      />
  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="16dp"
      android:text="Donâ€™t show again"
      app:layout_constraintBottom_toBottomOf="@+id/iab_activity_raiden_ok_button"
      app:layout_constraintStart_toEndOf="@id/iab_activity_raiden_dont_show_again"
      app:layout_constraintTop_toTopOf="@+id/iab_activity_raiden_ok_button"
      />

</android.support.constraint.ConstraintLayout>
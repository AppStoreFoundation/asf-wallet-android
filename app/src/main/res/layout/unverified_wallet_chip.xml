<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/balance_verify_chip_background"
    app:cardCornerRadius="9dp"
    app:cardElevation="0dp"
    >

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="horizontal"
      android:gravity="center"
      android:paddingStart="4dp"
      android:paddingEnd="4dp"
      >

    <ImageView
        android:id="@+id/chip_icon"
        android:layout_width="11dp"
        android:layout_height="11dp"
        android:layout_marginEnd="3dp"
        android:src="@drawable/ic_wallet_unverified_chip"
        />

    <TextView
        android:id="@+id/chip_text"
        style="@style/BalanceVerifyWalletChip.Unverified"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/unferified_tag"
        android:maxLines="1"
        android:ellipsize="end"
        />

  </LinearLayout>

</androidx.cardview.widget.CardView>
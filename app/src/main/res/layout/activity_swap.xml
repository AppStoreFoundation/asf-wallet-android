<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.asfoundation.wallet.tokenswap.swap_activity"
    >

  <Button
      android:id="@+id/bt1"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginBottom="152dp"
      android:layout_marginEnd="240dp"
      android:layout_marginStart="56dp"
      android:layout_marginTop="32dp"
      android:onClick="testSwap"
      android:text="swap ether to token "
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/et1"
      />
  <Spinner
      android:id="@+id/spinnerTo"
      android:layout_width="130dp"
      android:layout_height="61dp"
      android:layout_marginBottom="8dp"
      android:layout_marginEnd="8dp"
      android:layout_marginStart="8dp"
      android:layout_marginTop="8dp"
      android:entries="@array/tokensAvailableForSwap"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.172"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.364"
      />
  <EditText
      android:id="@+id/et1"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginBottom="32dp"
      android:layout_marginEnd="120dp"
      android:layout_marginStart="49dp"
      android:layout_marginTop="6dp"
      android:ems="10"
      android:hint="Amount (ETH)"
      android:inputType="textPersonName"
      android:textColorHint="@color/black"
      app:layout_constraintBottom_toTopOf="@+id/bt1"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/spinnerTo"
      />
  <Button
      android:id="@+id/bt2"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginBottom="165dp"
      android:layout_marginEnd="60dp"
      android:layout_marginStart="92dp"
      android:layout_marginTop="43dp"
      android:onClick="getExpectedRate"
      android:text="getExpectedRate"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toEndOf="@+id/bt1"
      app:layout_constraintTop_toBottomOf="@+id/et1"
      />


</android.support.constraint.ConstraintLayout>

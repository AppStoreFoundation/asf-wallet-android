<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
  <!-- Larger blue circle in back -->
  <item>
    <shape
        android:shape="ring"
        android:thicknessRatio="40"
        android:useLevel="false">
      <size
          android:height="180dp"
          android:width="180dp"/>
      <gradient
          android:angle="315"
          android:endColor="@color/btn_end_gradient_color"
          android:startColor="@color/btn_start_gradient_color"/>
    </shape>
  </item>
  <item>
    <shape android:shape="oval">
      <!-- transparent stroke = larger_circle_size - smaller_circle_size -->
      <stroke
          android:color="@android:color/transparent"
          android:width="90dp"/>
      <gradient
          android:angle="315"
          android:endColor="@color/btn_end_gradient_color"
          android:startColor="@color/btn_start_gradient_color"/>
    </shape>
  </item>
  <item
      android:bottom="50dp"
      android:drawable="@drawable/check_mark"
      android:end="44dp"
      android:gravity="center"
      android:left="44dp"
      android:right="44dp"
      android:start="44dp"
      android:top="50dp"
      >
  </item>
</layer-list>